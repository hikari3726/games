<div class="game-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="game-new-container col-md-offset-2 col-md-8">
        <div class="title">
          <p class="game gray">投稿</p>
        </div>
        <div class="entry-field">
          <%= render partial: 'entry-field', locals: { register: "登録" } %>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    $(function() {
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            $('#img_prev').attr('src',e.target.result);
          }
          reader.readAsDataURL(input.files[0]);
        }
      }
      $("#game_img").change(function() {
        readURL(this);
      });
    });
  </script>
  
</div>
