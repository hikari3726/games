<%= form_for @review, :url => {controller: "reviews", action: "create"} do |f| %>
  <div class="form-group">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :game_id, value: @game.id %>
  </div>
  <div class="form-group">
    <%= f.label :comment, class: "control-label" %>
    <%= render "layouts/error_messages", model: f.object, sub: :comment %>
    <%= f.text_area :comment, placeholder: "レビューを記入しよう（500文字以内）", rows: 7, class: "form-control" %>
  </div>
  <div class="form-group" id = "star">
    <%= f.label :evalution, class: "control-label" %>
    <%= render "layouts/error_messages", model: f.object, sub: :evalution %>
    <%= f.hidden_field :evalution, id: :review_star %>
  </div>
  <%= f.submit register, class: "btn btn-default form-control" %>
  <script>
    $('#star').raty({
      size: 36,
      starOff: '<%= asset_path('star-off.png') %>',
      starOn: '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'review[evalution]',
      half: true,
    });
  </script>
<% end %>


