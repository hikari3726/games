<div class="user-edit-wrapper top-blank">
  <div class="container">
    <div class="row">
      
      <div class="user-edit-container col-md-offset-4 col-md-4">
        <div class="entry-field">
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.file_field :image %>
            </div>
            <div class="form-group">
              <%= f.text_field :name, class: "gray form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :description, placeholder: '300字以内', row: 7, class: "from-control"%>
            </div>
            <%= f.submit "編集", class: "edit-btn gray btn btn-default" %>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>